<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.starbucksorder.another_back.repository.MenuCategoryMapper">

    <insert id="save">
        INSERT INTO
            menu_category_tb
        VALUES
        <foreach collection="menuIds"  item="menuId" separator=",">
            (DEFAULT, #{menuId}, #{categoryId})
        </foreach>
    </insert>

    <delete id="deleteByCategoryId">
        DELETE
        FROM
            menu_category_tb
        WHERE
            category_id = #{categoryId}
    </delete>

    <select id="findAllByCategoryId" resultType="com.starbucksorder.another_back.entity.Menu">
        SELECT
            mt.menu_id AS menuId,
            mt.menu_name AS menuName
        FROM
            menu_category_tb mct
            LEFT OUTER JOIN category_tb ct on (ct.category_id = mct.category_id)
            LEFT OUTER JOIN menu_tb mt on (mt.menu_id = mct.menu_id)
        WHERE
            ct.category_id = #{categoryId}
    </select>

</mapper>